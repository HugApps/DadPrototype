<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="200px"
    android:minHeight="300dp"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HandyButton"
        android:src="@mipmap/handyman"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/PlumberButton"
        android:layout_toStartOf="@+id/PlumberButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlumberButton"
        android:src="@mipmap/plumber"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LandScapeButton"
        android:src="@mipmap/landscape"
        android:tint="#ff000000"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/PlumberButton"
        android:layout_toEndOf="@+id/PlumberButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Handy Man"
        android:id="@+id/textView2"
        android:textColor="#ff060507"
        android:layout_above="@+id/PlumberButton"
        android:layout_alignLeft="@+id/HandyButton"
        android:layout_alignStart="@+id/HandyButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Plumbers"
        android:id="@+id/textView3"
        android:textColor="#ff09080b"
        android:layout_above="@+id/PlumberButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LandScaping"
        android:id="@+id/textView4"
        android:textColor="#ff09070a"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/LandScapeButton"
        android:layout_alignStart="@+id/LandScapeButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RenovationsButton"
        android:src="@mipmap/handy"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_below="@+id/HandyButton"
        android:layout_alignLeft="@+id/HandyButton"
        android:layout_alignStart="@+id/HandyButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SecurityButton"
        android:src="@mipmap/secure"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:layout_alignTop="@+id/ElectricButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ElectricButton"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:layout_below="@+id/PlumberButton"
        android:layout_toRightOf="@+id/PlumberButton"
        android:layout_toEndOf="@+id/PlumberButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Electricians "
        android:id="@+id/textView5"
        android:textColor="#ff030304"
        android:layout_below="@+id/ElectricButton"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Renovations"
        android:id="@+id/textView6"
        android:textColor="#ff030304"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/RenovationsButton"
        android:layout_alignStart="@+id/RenovationsButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Security"
        android:id="@+id/textView7"
        android:textColor="#ff030304"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>